{
  "presets": ["@babel/preset-env", "@babel/preset-react"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "~": "./src/",
          "~test": "./src/__test__/",
          "~actions": "./src/actions/",
          "~assets": "./src/assets/",
          "~components": "./src/components/",
          "~contexts": "./src/contexts/",
          "~reducers": "./src/reducers/",
          "~redux": "./src/redux/",
          "~styles": "./src/styles/"
        }
      }
    ]
  ]
}
